# Multi-stage build for test runner container
# Stage 1: Build stage
FROM node:18-alpine AS builder

# Install system dependencies
RUN apk add --no-cache \
    chromium \
    nss \
    freetype \
    freetype-dev \
    harfbuzz \
    ca-certificates \
    ttf-freefont \
    python3 \
    make \
    g++

# Set Playwright to use system Chromium
ENV PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true \
    PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser

# Create app directory
WORKDIR /app

# Copy package files
COPY package*.json ./
COPY pnpm-lock.yaml ./
COPY pnpm-workspace.yaml ./

# Install pnpm
RUN npm install -g pnpm

# Copy workspace packages
COPY packages/ ./packages/

# Install dependencies
RUN pnpm install --frozen-lockfile

# Build packages
RUN pnpm run build

# Stage 2: Runtime stage (distroless)
FROM gcr.io/distroless/nodejs18-debian11:nonroot

# Copy built application from builder stage
COPY --from=builder /app /app
COPY --from=builder /usr/bin/chromium-browser /usr/bin/chromium-browser
COPY --from=builder /usr/lib/chromium/ /usr/lib/chromium/
COPY --from=builder /etc/fonts/ /etc/fonts/

# Set working directory
WORKDIR /app

# Set environment variables
ENV NODE_ENV=production \
    PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true \
    PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser \
    PLAYWRIGHT_BROWSERS_PATH=/usr/lib/chromium

# Security: Run as non-root user (distroless already provides this)
USER nonroot

# Resource limits will be set by Kubernetes
# CPU: 1 core, Memory: 2GB (configured in k8s deployment)

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD node -e "console.log('Container healthy')" || exit 1

# Default command
CMD ["node", "packages/api/dist/index.js"]