{
  "name": "autoqa-vscode",
  "displayName": "AutoQA",
  "description": "AI-powered test generation and execution for Playwright",
  "version": "1.0.0",
  "publisher": "autoqa",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Testing",
    "Other"
  ],
  "keywords": [
    "testing",
    "playwright",
    "automation",
    "ai",
    "test-generation"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:javascript",
    "workspaceContains:**/*.spec.ts",
    "workspaceContains:**/*.test.ts",
    "workspaceContains:playwright.config.ts"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "autoqa.generateTest",
        "title": "Generate Test from Comment",
        "category": "AutoQA"
      },
      {
        "command": "autoqa.generateSelector",
        "title": "Generate Playwright Selector",
        "category": "AutoQA"
      },
      {
        "command": "autoqa.runTest",
        "title": "Run Test",
        "category": "AutoQA"
      },
      {
        "command": "autoqa.debugTest",
        "title": "Debug Test",
        "category": "AutoQA"
      },
      {
        "command": "autoqa.recordTest",
        "title": "Record New Test",
        "category": "AutoQA"
      },
      {
        "command": "autoqa.openTestRunner",
        "title": "Open Test Runner",
        "category": "AutoQA"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorTextFocus && resourceExtname =~ /\\.(ts|js)$/",
          "command": "autoqa.generateTest",
          "group": "autoqa@1"
        },
        {
          "when": "editorTextFocus && resourceExtname =~ /\\.(ts|js)$/",
          "command": "autoqa.generateSelector",
          "group": "autoqa@2"
        }
      ],
      "editor/title": [
        {
          "when": "resourceExtname =~ /\\.(spec|test)\\.(ts|js)$/",
          "command": "autoqa.runTest",
          "group": "navigation@1"
        },
        {
          "when": "resourceExtname =~ /\\.(spec|test)\\.(ts|js)$/",
          "command": "autoqa.debugTest",
          "group": "navigation@2"
        }
      ]
    },
    "keybindings": [
      {
        "command": "autoqa.generateTest",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorTextFocus"
      },
      {
        "command": "autoqa.generateSelector",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s",
        "when": "editorTextFocus"
      },
      {
        "command": "autoqa.runTest",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "resourceExtname =~ /\\.(spec|test)\\.(ts|js)$/"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "autoqa.testExplorer",
          "name": "AutoQA Tests",
          "when": "autoqa.hasTests"
        }
      ]
    },
    "viewsContainers": {
      "panel": [
        {
          "id": "autoqa",
          "title": "AutoQA",
          "icon": "$(beaker)"
        }
      ]
    },
    "views": {
      "autoqa": [
        {
          "type": "webview",
          "id": "autoqa.testPreview",
          "name": "Test Preview",
          "when": "autoqa.hasTests"
        },
        {
          "type": "webview",
          "id": "autoqa.selectorPlayground",
          "name": "Selector Playground"
        }
      ]
    },
    "snippets": [
      {
        "language": "typescript",
        "path": "./snippets/playwright.json"
      },
      {
        "language": "javascript",
        "path": "./snippets/playwright.json"
      }
    ],
    "configuration": {
      "title": "AutoQA",
      "properties": {
        "autoqa.aiProvider": {
          "type": "string",
          "default": "openai",
          "enum": [
            "openai",
            "claude",
            "local"
          ],
          "description": "AI provider for test generation"
        },
        "autoqa.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API key for test generation"
        },
        "autoqa.testRunner.port": {
          "type": "number",
          "default": 3333,
          "description": "Port for local test runner"
        },
        "autoqa.testRunner.autoStart": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start test runner when opening test files"
        },
        "autoqa.preview.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable inline test preview"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "playwright": "^1.40.0",
    "openai": "^4.20.0",
    "axios": "^1.6.0"
  }
}
