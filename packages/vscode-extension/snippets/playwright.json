{
  "Playwright Test": {
    "prefix": "test",
    "body": [
      "test('${1:test description}', async ({ page }) => {",
      "  ${2:// Add your test steps here}",
      "});"
    ],
    "description": "Basic Playwright test"
  },

  "Login Test": {
    "prefix": "login-test",
    "body": [
      "test('${1:user can login with valid credentials}', async ({ page }) => {",
      "  // Navigate to login page",
      "  await page.goto('${2:https://example.com/login}');",
      "",
      "  // Fill login form",
      "  await page.fill('[data-testid=\"email\"]', '${3:user@example.com}');",
      "  await page.fill('[data-testid=\"password\"]', '${4:password123}');",
      "",
      "  // Submit form",
      "  await page.click('[data-testid=\"login-button\"]');",
      "",
      "  // Verify successful login",
      "  await expect(page).toHaveURL(/.*dashboard/);",
      "  await expect(page.locator('[data-testid=\"user-menu\"]')).toBeVisible();",
      "});"
    ],
    "description": "Complete login test template"
  },

  "Form Test": {
    "prefix": "form-test",
    "body": [
      "test('${1:user can submit form}', async ({ page }) => {",
      "  // Navigate to form page",
      "  await page.goto('${2:https://example.com/form}');",
      "",
      "  // Fill form fields",
      "  await page.fill('[data-testid=\"${3:name}\"]', '${4:John Doe}');",
      "  await page.fill('[data-testid=\"${5:email}\"]', '${6:john@example.com}');",
      "",
      "  // Submit form",
      "  await page.click('[data-testid=\"submit-button\"]');",
      "",
      "  // Verify form submission",
      "  await expect(page.locator('[data-testid=\"success-message\"]')).toBeVisible();",
      "});"
    ],
    "description": "Form submission test template"
  },

  "Navigation Test": {
    "prefix": "nav-test",
    "body": [
      "test('${1:user can navigate to page}', async ({ page }) => {",
      "  // Navigate to starting page",
      "  await page.goto('${2:https://example.com}');",
      "",
      "  // Click navigation link",
      "  await page.click('[data-testid=\"${3:nav-link}\"]');",
      "",
      "  // Verify navigation",
      "  await expect(page).toHaveURL(/.*${4:target-page}/);",
      "  await expect(page.locator('${5:h1}')).toBeVisible();",
      "});"
    ],
    "description": "Navigation test template"
  },

  "API Test": {
    "prefix": "api-test",
    "body": [
      "test('${1:API interaction test}', async ({ page }) => {",
      "  // Mock API response",
      "  await page.route('**/api/${2:endpoint}', route => {",
      "    route.fulfill({",
      "      status: 200,",
      "      contentType: 'application/json',",
      "      body: JSON.stringify({ ${3:success: true} })",
      "    });",
      "  });",
      "",
      "  // Navigate to page",
      "  await page.goto('${4:https://example.com}');",
      "",
      "  // Trigger API call",
      "  await page.click('[data-testid=\"${5:api-button}\"]');",
      "",
      "  // Verify API response handling",
      "  await expect(page.locator('[data-testid=\"${6:api-result}\"]')).toBeVisible();",
      "});"
    ],
    "description": "API interaction test template"
  },

  "Page Object": {
    "prefix": "page-object",
    "body": [
      "class ${1:PageName}Page {",
      "  constructor(private page: Page) {}",
      "",
      "  // Locators",
      "  get ${2:element}() {",
      "    return this.page.locator('[data-testid=\"${3:element-id}\"]');",
      "  }",
      "",
      "  // Actions",
      "  async ${4:action}() {",
      "    await this.${2:element}.click();",
      "  }",
      "",
      "  // Assertions",
      "  async expect${5:Condition}() {",
      "    await expect(this.${2:element}).toBeVisible();",
      "  }",
      "}"
    ],
    "description": "Page Object Model class"
  },

  "Expect Visible": {
    "prefix": "expect-visible",
    "body": [
      "await expect(page.locator('${1:[data-testid=\"element\"]}')).toBeVisible();"
    ],
    "description": "Assert element is visible"
  },

  "Expect Text": {
    "prefix": "expect-text",
    "body": [
      "await expect(page.locator('${1:[data-testid=\"element\"]}')).toHaveText('${2:expected text}');"
    ],
    "description": "Assert element has text"
  },

  "Expect URL": {
    "prefix": "expect-url",
    "body": ["await expect(page).toHaveURL(/.*${1:path}/);"],
    "description": "Assert page URL matches pattern"
  },

  "Fill Input": {
    "prefix": "fill",
    "body": [
      "await page.fill('[data-testid=\"${1:input-id}\"]', '${2:value}');"
    ],
    "description": "Fill input field"
  },

  "Click Element": {
    "prefix": "click",
    "body": ["await page.click('[data-testid=\"${1:element-id}\"]');"],
    "description": "Click element"
  },

  "Wait For Element": {
    "prefix": "wait-for",
    "body": [
      "await page.waitForSelector('[data-testid=\"${1:element-id}\"]');"
    ],
    "description": "Wait for element to appear"
  },

  "Screenshot": {
    "prefix": "screenshot",
    "body": ["await page.screenshot({ path: '${1:screenshot.png}' });"],
    "description": "Take screenshot"
  },

  "Before Each": {
    "prefix": "before-each",
    "body": [
      "test.beforeEach(async ({ page }) => {",
      "  ${1:// Setup code}",
      "});"
    ],
    "description": "Before each test hook"
  },

  "Test Describe": {
    "prefix": "describe",
    "body": [
      "test.describe('${1:test suite name}', () => {",
      "  ${2:// Tests go here}",
      "});"
    ],
    "description": "Test suite with describe block"
  }
}
